<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_rootview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_linear"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/uid_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@drawable/user_icon"/>

        <TextView
            android:id="@+id/com_lv_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="홍길동"
            android:textSize="18dp"
            android:textColor="#B7B7B7"
            android:maxLength="8"
            android:ellipsize="end" />
    </LinearLayout>

    <TextView
        android:id="@+id/com_lv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:textColor="#B7B7B7"
        android:text="Test 글쓰기 입니다. 안녕하세요, 박석규입니다. 오늘 살펴볼 것은 안드로이드 스튜디오
의 MAXLINE을 2로 설정했을때에"
        android:maxLines="6"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/com_lv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:textColor="#565656"
        android:text="Time"
        android:layout_marginBottom="3dp"/>

</LinearLayout>