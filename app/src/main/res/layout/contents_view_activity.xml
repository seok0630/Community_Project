<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#181818"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/conents_view_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:outlineProvider="none"
                android:background="@drawable/arrow_back"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/back_color_gray"
                android:paddingVertical="18dp">
                <TextView
                    android:id="@+id/contents_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:maxLength="12"
                    android:ellipsize="end"
                    android:textColor="#D3D3D3"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/context_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="110dp"
                        android:text="제목"
                        android:textColor="#D3D3D3"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/context_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="time"
                        android:textColor="#D3D3D3"
                        android:maxLength="10"
                        android:layout_alignParentEnd="true"
                        android:textSize="16sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/context_uid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="uid"
                        android:textColor="#D3D3D3"
                        android:maxLength="8"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/context_nov"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조회수 0"
                        android:textColor="#D3D3D3"
                        android:maxLength="15"
                        android:layout_alignParentEnd="true"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#363636"
                android:layout_marginVertical="8dp"/>
            <ImageView
                android:id="@+id/contents_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxHeight="500dp"
                android:scaleType="fitStart"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/contents_view_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용"
                android:textColor="#D3D3D3"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginBottom="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/thumb_up_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_baseline_thumb_up_24"
                    android:textColor="#B7B7B7"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/thumb_up_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18dp"
                    android:textColor="#D3D3D3"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="40dp"/>
                <Button
                    android:id="@+id/thumb_down_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_baseline_thumb_down_24"
                    android:textColor="#B7B7B7"
                    android:textSize="17dp"/>
                <TextView
                    android:id="@+id/thumb_down_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18dp"
                    android:textColor="#D3D3D3"
                    android:layout_marginLeft="8dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#363636"
                android:layout_marginVertical="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/conents_view_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="댓글"
                    android:textColor="#D3D3D3"
                    android:textColorHint="#D3D3D3"
                    android:backgroundTint="#363636"/>
                <Button
                    android:id="@+id/comment_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_button_gray"
                    android:text="등록"
                    android:textColor="#B7B7B7"
                    android:textSize="17dp"/>
            </LinearLayout> <!-- 댓글달기 리니어레이아웃 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="새로고침"
                    android:textColor="#D3D3D3"
                    android:textSize="18dp"/>
                <Button
                    android:id="@+id/comment_refresh"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/refresh"/>
                <TextView
                    android:id="@+id/delete_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="글 삭제"
                    android:textColor="#D3D3D3"
                    android:textSize="18dp"/>

            </LinearLayout> <!-- 새로고침 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#363636"
                android:layout_marginVertical="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_commnent_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>