<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_rootview"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_linear"
    android:layout_marginTop="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:src="@drawable/user_icon"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/lv_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍길동"
            android:textSize="18dp"
            android:textColor="#B7B7B7"
            android:maxLength="8"
            android:ellipsize="end"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:id="@+id/lv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B7B7B7"
            android:text="Test 글쓰기 입니다. 안녕하세요, 박석규입니다. 오늘 살펴볼 것은 안드로이드 스튜디오
의 MAXLINE을 2로 설정했을때에"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="6dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <TextView
                android:id="@+id/lv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textSize="13dp"
                android:textColor="#B7B7B7"
                android:maxLength="10"
                android:ellipsize="end"
                android:layout_marginLeft="0dp"/>
            <TextView
                android:id="@+id/lv_noc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글(0)"
                android:textSize="13dp"
                android:textColor="#B7B7B7"
                android:maxLength="8"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/lv_recom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추천(0)"
                android:textSize="13dp"
                android:textColor="#B7B7B7"
                android:maxLength="8"
                android:ellipsize="end"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>