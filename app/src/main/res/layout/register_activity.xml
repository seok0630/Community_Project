<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#181818"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginVertical="45dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새 계정 만들기"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입을 하기위해 두가지 정보가 필요해요"
            android:textSize="16dp"
            android:textColor="#B7B7B7"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#909090"
            android:textSize="18dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"/>
        <EditText
            android:id="@+id/reg_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingVertical="20dp"
            android:textColorHint="#909090"
            android:textColor="#909090"
            android:background="@drawable/edit_text_style1"
            android:hint="이메일"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#909090"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"/>

        <EditText
            android:id="@+id/reg_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:layout_marginBottom="18dp"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_style1"
            android:textColorHint="#909090"
            android:hint="비밀번호"/>

        <EditText
            android:id="@+id/reg_pass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:textColorHint="#909090"
            android:background="@drawable/edit_text_style1"
            android:hint="비밀번호 재입력"
            android:inputType="textPassword"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/reg_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:text="회원가입"
            android:elevation="20dp"
            android:textColor="#B7B7B7"
            android:background="@drawable/register_round_button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#B7B7B7"
            android:text="다음으로 로그인"
            android:textSize="16dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/google"/>
            <View
                android:layout_width="2dip"
                android:layout_height="42dp"
                android:background="#909090"
                android:layout_marginLeft="12dp"/>
            <Button
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/twitter"/>
            <View
                android:layout_width="2dip"
                android:layout_height="42dp"
                android:background="#909090"
                android:layout_marginLeft="12dp"/>
            <Button
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/facebook"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>